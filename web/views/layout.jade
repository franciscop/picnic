doctype html
html
  head
    block title
      title Picnic CSS
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name="keywords" content="css, library, css library, picnic, picnicss, html, html5")
    meta(name="description" content="Unpack your mean and start coding. A lighweight CSS library with nice defaults to give you a fast start.")
    link(rel='stylesheet', href='/font/fontello.css')
    link(rel='stylesheet', href='/nut/picnic+nav.min.fresh.css')
    link(rel="icon", href="/img/basket.png", type="image/png")
    
    style.
      body {
        display: block;
        text-align: center;
        font-size: 16px;
        color: #333;
        background: #FFF;
        margin: 80px auto 500px;
        width: 100%;
      }
      .render {
        margin: 10px 0;
        max-width: 100%;
        overflow: hidden;
      }
      section {
        max-width: 620px;
        margin: 10px auto 30px;
      }
      pre {
        text-align: left;
        max-width: 620px;
        margin: 20px auto;
        border: 1px solid #CCC;
        padding: 8px 10px;
        background: #FAFAFA;
      }
      pre code {
        background: #FAFAFA;
        padding: 0;
      }
      table {
        margin: auto;
      }
      main,
      main.limit {
        margin-bottom: 300px
      }
      input {
        vertical-align: top;
      }
      form input[type=submit] {
        font-size: 1.05em;
      }
      .main img {
        vertical-align: middle;
      }
      .text {
        max-width: 500px;
        text-align: left;
        margin: 0 auto;
      }
      a {
        color: #0074d9;
        text-decoration: none;
      }
      .plugin {
        width: 100%;
        max-width: 500px;
        margin: 40px auto 20px;
      }
      .plugin header {
        position: relative;
        text-align: left;
        display: block;
      }
      .plugin .install {
        position: absolute;
        right: 0px;
        top: .9em;
      }

      .plugin .description {
        width: 100%;
        display: block;
        margin-top: 10px;
        text-align: left;
      }
  body
    block nav
      nav
        a.main(href="/") Picnic CSS

        // responsive
        input#bmenu.burgercheck(type="checkbox")
        label.burgermenu(for="bmenu")

        div.menu
          a.icon-picture(href="/demo/") Demo
          a.icon-help-circled(href="/test/") Test
          a.icon-g(href="https://github.com/picnicss/picnic" target="_blank") Github
          a.button.icon-puzzle(href="/plugins/") Plugins

